<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/out_sync_ntp"
        android:id="@+id/txt_loading_flash"
        android:visibility="gone"
        android:padding="16sp"
        android:textColor="@color/red"
        android:layout_alignTop="@+id/txt_without_events"
        android:gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/out_no_active_events"
        android:id="@+id/txt_without_events"
        android:visibility="visible"
        android:padding="16sp"
        android:textColor="@color/red"
        android:layout_alignTop="@+id/cardList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/cardList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
    />




</LinearLayout>